{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  //"Kestrel": {
  //  "Endpoints": {
  //    "Http": {
  //      "Url": "http://*:8088"
  //    }
  //  }
  //},
  "YARP": {
    "Routes": {
      "products-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "products/{**catch-all}"
        },
        "Transforms": [
          { "pathPrefix": "api/" }
        ]
      },
      "api-products-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "api/products/{**catch-all}"
        }
      },
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "orders/{**catch-all}"
        },
        "Transforms": [
          { "pathPrefix": "api/" }
        ]
      },
      "api-orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "api/orders/{**catch-all}"
        }
      },
      "processing-orders-route": {
        "ClusterId": "processing-orders-cluster",
        "Match": {
          "Path": "processingOrders/{**catch-all}"
        },
        "Transforms": [
          { "pathPrefix": "api/" }
        ]
      },
      "api-processing-orders-route": {
        "ClusterId": "processing-orders-cluster",
        "Match": {
          "Path": "api/processingorders/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "products-cluster": {
        "Destinations": {
          "catalog-service": {
            "Address": "http://catalog_service_api:8080/"
          }
        }
      },
      "orders-cluster": {
        "Destinations": {
          "order-service": {
            "Address": "http://order_service_api:8081/"
          }
        }
      },
      "processing-orders-cluster": {
        "Destinations": {
          "order-processing-service": {
            "Address": "http://order_processing_service_api:8082/"
          }
        }
      }
    }
  }

}
